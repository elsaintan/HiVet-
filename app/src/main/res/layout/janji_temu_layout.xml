<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/frame_transparan">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/photouser"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="16dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/photouser"
                android:text="Nama User"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/jenisTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nameTV"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/photouser"
                android:text="Jenis hewan"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/namahewanTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/jenisTV"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/photouser"
                android:text="Nama hewan"
                android:textSize="14sp" />

            <Button
                android:id="@+id/chatbt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/green_terang"
                android:fontFamily="@font/roboto_bold"
                android:text="Rincian"
                android:textColor="@color/black" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>