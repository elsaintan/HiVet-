<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfileActivity">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profileIM"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/namauTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileIM"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Name" />

    <RelativeLayout
        android:id="@+id/userRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/emailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailTV"
            android:layout_marginTop="15dp"
            android:text="Alamat" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/menuRL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/userRL">

        <Button
            android:id="@+id/suntinTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunting"
            android:layout_marginStart="30dp"/>

        <Button
            android:id="@+id/gpasswordTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganti Password"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/suntinTV"/>

    </RelativeLayout>

</RelativeLayout>