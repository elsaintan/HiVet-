<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_margin="8dp"
            android:background="@drawable/frame_transparan"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/jenis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Jenis"
                    android:textSize="20sp"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/jumlahTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Nama User"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="@id/jenis"
                    app:layout_constraintTop_toBottomOf="@id/jenis" />

                <TextView
                    android:id="@+id/tanggalTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Jenis hewan"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/jumlahTV"
                    app:layout_constraintTop_toBottomOf="@+id/jumlahTV" />

                <TextView
                    android:id="@+id/statusTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Nama hewan"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tanggalTV"
                    app:layout_constraintTop_toBottomOf="@+id/tanggalTV" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>